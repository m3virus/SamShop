@model IEnumerable<Product>
@{

}

@foreach (var item in Model)
{
    <div class="card m-2">
        <h5 class="card-header">@item.ProductId</h5>
        <div class="card-body">
            <h5 class="card-title">@item.ProductName</h5>
            <p class ="card-text"> @item.Amount</p>
            <p class ="card-text"> @item.Price</p>
           
            
            <a class="btn btn-primary" asp-controller="AdminProduct" asp-action="Confirm" asp-route-productId="@item.ProductId">confirm</a>
            <a class="btn btn-primary" asp-controller="AdminProduct" asp-action="delete" asp-route-productId="@item.ProductId">delete</a>



        </div>
    </div>
}